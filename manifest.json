{
  "name": "Recite",
  "description": "Remember all your saved quotes and highlights.",
  "version": "1.2",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["storage", "identity"],
  "chrome_url_overrides": {
    "newtab": "new-tab.html"
  },
  "action": {
    "default_icon": {
      "16": "/images/recite-16.png",
      "32": "/images/recite-32.png",
      "48": "/images/recite-48.png",
      "128": "/images/recite-128.png"
    }
  },
  "icons": {
    "16": "/images/recite-16.png",
    "32": "/images/recite-32.png",
    "48": "/images/recite-48.png",
    "128": "/images/recite-128.png"
  },
  "oauth2": {
    "client_id": "{{OAUTH_CLIENT_ID}}",
    "scopes": [
      "https://www.googleapis.com/auth/userinfo.email",
      "https://www.googleapis.com/auth/spreadsheets.readonly"
    ]
  }
}
